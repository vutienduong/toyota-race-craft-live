# Frontend Configuration

# Data Mode: "sample" or "backend"
# - sample: Use mock data, no backend required (for Vercel deployment)
# - backend: Call backend APIs (requires backend server running)
# Default: backend
NEXT_PUBLIC_DATA_MODE=backend

# Backend API URLs (only used when DATA_MODE=backend)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Mapbox (get token from mapbox.com)
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here
