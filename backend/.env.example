# Backend Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Data Mode Configuration
# Controls whether to use sample data or real CSV data from data folder
# Values: "sample" | "real"
# Default: sample
DATA_MODE=sample

# Data Directory
# Path to the directory containing real race data (only used when DATA_MODE=real)
# Should contain: R1_barber_telemetry_data.csv, R1_barber_lap_time.csv, etc.
# Default: ../data/barber
DATA_DIR=../data/barber

# Default Race Session
# Used for loading telemetry and lap data
# Values: R1, R2
DEFAULT_RACE=R1

# Database (if needed later)
# DATABASE_URL=

# Model Configuration
MODEL_PATH=./models/trained
PACE_MODEL_VERSION=v1
